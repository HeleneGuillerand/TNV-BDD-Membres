{% extends 'base.html.twig' %}

{% block title %}Tarif FFT{% endblock %}

{% block body %}
    
    <h1>Tarif FFT</h1>
    <a href="{{ path('app_rate_fft_index') }}" class="btn btn-primary float-end m-2">Retour</a>
    <a href="{{ path('app_rate_fft_edit', {'id': rate_fft.id}) }}" class="btn btn-sm btn-warning float-end m-2">
        <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
    </a>
    <table class="table table-dark m-5">
        <tbody>
            <tr>
                <th>Code</th>
                <td class="text-center">{{ rate_fft.code }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="text-center">{{ rate_fft.label }}</td>
            </tr>
            <tr>
                <th>Frais d'entrée</th>
                <td class="text-center">{{ rate_fft.entryFee }} €</td>
            </tr>
            <tr>
                <th>Cotisation</th>
                <td class="text-center">{{ rate_fft.cotisation }} €</td>
            </tr>
            <tr>
                <th>Licence</th>
                <td class="text-center">{{ rate_fft.licence }} €</td>
            </tr>
            <tr>
                <th>Total</th>
                <td class="text-center">{{ rate_fft.amount }} €</td>
            </tr>
        </tbody>
    </table>

    {{ include('rate_fft/_delete_form.html.twig') }}
{% endblock %}
